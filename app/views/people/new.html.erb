<h1>People</h1>
<%= form_for @person do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>


  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>

  <%= f.submit %>
<% end %>

